{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    // Relax type checking for production builds
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "build",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
} 