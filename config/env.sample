# Themis Application Environment Variables - SAMPLE FILE
# Copy this file to .env and update with actual values

# Server Configuration
NODE_ENV=production
PORT=3000
API_URL=http://themis-staging.example.com/api
FRONTEND_URL=http://themis-staging.example.com
JWT_SECRET=themis_jwt_secret_key_2024
JWT_EXPIRE=24h

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=themis_user
DB_PASSWORD=themis_db_password_2024
DB_NAME=themis_db

# Logging
LOG_LEVEL=info

# Email Configuration (if needed)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=notifications@example.com
# SMTP_PASS=smtp_password
# EMAIL_FROM=Themis <notifications@example.com>

# File Storage
UPLOAD_DIR=/var/www/themis/uploads
MAX_FILE_SIZE=10485760 # 10MB

# Security
CORS_ORIGIN=http://themis-staging.example.com
SESSION_SECRET=themis_session_secret_key_2024
SERVER_NAME=themis-staging.example.com 